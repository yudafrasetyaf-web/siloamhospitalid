# Environment
NODE_ENV=production

# Database Configuration
DB_NAME=hospital_db
DB_USER=hospital_admin
# SECURITY WARNING: Use strong password (min 16 chars, mixed case, numbers, symbols)
# In production, use secrets manager (AWS Secrets Manager, HashiCorp Vault)
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_16_CHARS
DB_HOST=localhost
DB_PORT=5432

# Database Connection Pool (Performance)
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Configuration
# SECURITY WARNING: Use cryptographically secure random string (min 32 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
# Healthcare data security: shorter expiry recommended (2h instead of 7d)
JWT_EXPIRES_IN=2h

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
# CORS: Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
API_VERSION=v1
PORT=4000

# Rate Limiting (DDoS Protection)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PgAdmin (Development only)
PGADMIN_EMAIL=admin@siloam.com
# SECURITY WARNING: Change default password!
PGADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
# SECURITY WARNING: Use app-specific password or secrets manager
SMTP_PASSWORD=USE_APP_SPECIFIC_PASSWORD_OR_SECRETS_MANAGER
EMAIL_FROM=noreply@siloamhospitals.com

# Redis Configuration (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Encryption Key (for MFA secrets and sensitive data)
# CRITICAL: Must be 32 bytes (64 hex characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=CHANGE_THIS_TO_64_CHAR_HEX_STRING_MUST_BE_EXACTLY_64_CHARS

# Security Settings
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
